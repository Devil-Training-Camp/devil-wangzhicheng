{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}
